{
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "outDir": "src/typings",
    "paths": {
      "@themes/*": [
        "src/themes/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": false
  },
  "include": [
    ".storybook/**/*.ts",
    "src/**/*.ts"
  ]
}
